<?xml version="1.0" encoding="UTF-8"?>
<appian-component-plugin name="LV Component Plug-in" key="com.lv.tools.comp">
  <plugin-info>
    <description>LV Test Component</description>
    <vendor name="Persistent Systems" url="http://www.persistent.com" />
    <support supported="true" email="leela_vundavalli@persistent.com" url="http://www.persistent.com"/>
    <version>1.0</version>
  </plugin-info>

  <component rule-name="lvComponent" version="1.0.0">
    <sdk-version>2.0.0</sdk-version>
    <icon-file>lvComponent.svg</icon-file>
    <parameter>
      <name>docurl</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <parameter>
      <name>pageNumber</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <parameter>
      <name>xPos</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <parameter>
      <name>yPos</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <parameter>
      <name>xSize</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <parameter>
      <name>ySize</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <parameter>
      <name>color</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <html-entry-point>index.html</html-entry-point>
    <supported-user-agents>chrome firefox ie11 edge safari mobile</supported-user-agents>
  </component>
</appian-component-plugin>
